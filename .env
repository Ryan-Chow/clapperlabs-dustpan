# Anthropic API Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# CapCut MCP Server Configuration
CAPCUT_MCP_URL=http://localhost:9000
CAPCUT_MCP_AUTO_START=true

# Optional: Custom paths
